<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.LoginController">
    <Label text="Iniciar Sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Contraseña" />
    <Button text="Register" onAction="#goToRegister" maxWidth="100" />
    <Button text="Entrar" onAction="#handleLogin" maxWidth="100" />
    <Label fx:id="messageLabel" textFill="red" />
</VBox>
