<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="239.0" prefWidth="341.0"
	spacing="20" xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.LoanController">
	<Label style="-fx-font-size: 24px; -fx-font-weight: bold;"
		text="Make a loan" />
	<Label style="-fx-font-weight: bold; -fx-font-size: 18px;"
		text="Do u want to make a loan?" />
	<DatePicker fx:id="datePicker" promptText="Select a date" />
	<Button minWidth="150" onAction="#handleLoanButton"
		prefHeight="26.0" prefWidth="154.0" text="Enter" />
</VBox>
