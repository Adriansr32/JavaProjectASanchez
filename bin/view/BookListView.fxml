<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.BookListController" padding="10">
    
    <Label text="Lista de Libros" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    
    <TableView fx:id="bookTableView" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="titleColumn" text="Título" prefWidth="200" />
            <TableColumn fx:id="authorColumn" text="Autor" prefWidth="150" />
            <TableColumn fx:id="yearColumn" text="Año" prefWidth="100" />
            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="150" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Ver Detalles" onAction="#handleViewDetails" />
        <Button text="Cerrar Sesión" onAction="#handleLogout" />
    </HBox>
</VBox>
