<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml"
	fx:controller="controllers.BookDetailController" spacing="15"
	alignment="CENTER">

	<ImageView fx:id="coverImage" fitWidth="200" fitHeight="300" />
	<Label fx:id="titleLabel"
		style="-fx-font-size: 20px; -fx-font-weight: bold;" />
	<Label fx:id="authorLabel" />
	<Label fx:id="editorialLabel" />
	<Label fx:id="yearLabel" />
	<Label fx:id="isbnLabel" />
	<Label fx:id="isOnLoanLabel" />
	<Button text="Mostrar valoraciones" onAction="#handleValorationButtonClick" />
	<Button text="Make a Loan" onAction="#handleLoanButtonClick" />


</VBox>
