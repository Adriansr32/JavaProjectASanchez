<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.BookDetailController" padding="10">

    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true"/>
    <Label fx:id="authorLabel" />
    <Label fx:id="editorialLabel" />
    <Label fx:id="yearLabel" />
    <Label fx:id="isbnLabel" />
    
    <ImageView fx:id="coverImageView" fitWidth="150" fitHeight="200" preserveRatio="true" />
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Prestar Libro" onAction="#handleLoanBook" />
        <Button text="Ver Valoraciones" onAction="#handleShowValorations" />
        <Button text="Volver" onAction="#handleBack" />
    </HBox>

</VBox>
